rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // 游릭 User profile and cover photos
    match /user_uploads/{userId}/{fileName} {
      allow read: if true;  // everyone can view profile and cover
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 游릭 Post and bid images
    match /post_images/{userId}/{fileName} {
      allow read: if true;  // all users can view post images
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 游릭 Chat images - CORRECTED: Match the actual upload path structure
    match /chat_images/{fileName} {
      allow read, write: if request.auth != null;
    }

    // 游릭 Chat videos - CORRECTED: Match the actual upload path structure  
    match /chat_videos/{fileName} {
      allow read, write: if request.auth != null;
    }

    // 游릭 Notification images (if any)
    match /notification_images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}