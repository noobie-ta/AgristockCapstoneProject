<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_notification_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/modern_post_card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Post Image -->
    <ImageView
        android:id="@+id/iv_post_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@color/gray_100"
        android:layout_marginEnd="12dp" />

    <!-- Notification Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title and Unread Dot -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User added your item to favorites"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Unread Dot -->
            <View
                android:id="@+id/dot_unread"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/unread_dot_background"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Subtitle (Item Title) -->
        <TextView
            android:id="@+id/tv_notification_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Item Title"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Price or Unavailable Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_post_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‚±0.00"
                android:textColor="@color/yellow_accent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Unavailable Message -->
        <TextView
            android:id="@+id/tv_unavailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="This post is no longer available"
            android:textColor="@color/red_accent"
            android:textSize="12sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:visibility="gone" />

    </LinearLayout>

    <!-- User Avatar -->
    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circular_avatar_background"
        android:padding="2dp"
        android:layout_marginStart="8dp" />

    <!-- Three dots menu -->
    <ImageView
        android:id="@+id/iv_menu_dots"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:contentDescription="More options" />

</LinearLayout>

