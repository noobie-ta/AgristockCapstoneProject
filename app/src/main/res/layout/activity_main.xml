<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background_secondary"
            android:fitsSystemWindows="true">

        <!-- Top Section: Search & Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFD700"
            android:padding="12dp"
            android:elevation="4dp"
            android:fitsSystemWindows="true">

            <!-- App Logo/Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <!-- App Logo/Name -->
                <!-- Hamburger Menu Button moved to left for accessibility -->
                <ImageView
                    android:id="@+id/btn_hamburger"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_menu"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:contentDescription="Menu"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="AgriStock"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Search Bar with Search Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                    app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="@color/gray_200"
                app:hintTextColor="@color/text_hint"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/yellow_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search items, sellers, or categories..."
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint" />

            </com.google.android.material.textfield.TextInputLayout>

                <!-- Search Icon Button -->
                <ImageView
                    android:id="@+id/btn_search_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:background="@drawable/button_search_icon"
                    android:padding="12dp"
                    android:contentDescription="Search"
                    android:clickable="true"
                    android:focusable="true" />

                </LinearLayout>

            <!-- Category chips removed for cleaner header -->

            <!-- SELL and BID Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sell"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/button_sell_red_shadow"
                    android:text="SELL"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_bid"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/button_bid_blue_shadow"
                    android:text="BID"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Categories Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:background="@color/white"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Filter Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/filter_toggle_active_ripple"
                    android:text="ALL"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="sans-serif-medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_filter_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/filter_toggle_default_ripple"
                    android:text="SELL"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="sans-serif-medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_filter_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/filter_toggle_default_ripple"
                    android:text="BID"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Posts Section -->

            <!-- Bottom Navigation Bar (Floating) -->

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srl_home_refresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_secondary"
                    android:padding="12dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- View Toggle Options -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/view_toggle_background"
                                android:padding="2dp">

                                <ImageView
                                    android:id="@+id/btn_list_view_home"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="@drawable/view_toggle_active"
                                    android:src="@drawable/ic_list_view"
                                    android:padding="6dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:contentDescription="List View" />

                                <ImageView
                                    android:id="@+id/btn_grid_view_home"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginStart="2dp"
                                    android:background="@drawable/view_toggle_inactive"
                                    android:src="@drawable/ic_grid_view"
                                    android:padding="6dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:contentDescription="Grid View" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_posts_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Posts will be added dynamically here -->
                            <!-- Empty state will be shown when no posts -->

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="12dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_bottom_nav_floating"
                android:padding="8dp"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/nav_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_nav_item_active_circle"
                        android:padding="4dp"
                        android:src="@drawable/ic_home"
                        android:tint="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_notifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_notifications_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_notifications"
                            android:tint="@color/text_secondary" />

                        <!-- Notification Badge -->
                        <View
                            android:id="@+id/badge_notifications"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/unread_dot_background"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_messages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_messages"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_sold_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_favorites"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_profile"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Drawer Navigation -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <!-- Drawer Header -->
            <include layout="@layout/drawer_header" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Drawer Menu -->
            <include layout="@layout/drawer_menu" />

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>