<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background_secondary"
            android:fitsSystemWindows="false">

        <!-- Top Section: Search & Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFD700"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:paddingTop="8dp"
            android:elevation="4dp"
            android:fitsSystemWindows="false">

            <!-- App Logo/Name -->

            <!-- Enhanced Search Bar with Icon Inside -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Hamburger Menu Button -->

                <ImageView
                    android:id="@+id/btn_hamburger"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu"
                    android:padding="4dp"
                    android:src="@drawable/ic_menu"
                    android:tint="@color/text_secondary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="AgriStock"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_welcome_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="Welcome, User"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:hint="Search items, sellers, or categoriesâ€¦"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:background="@drawable/search_bar_background"
                    android:maxLines="1"
                    android:elevation="3dp"
                    android:imeOptions="actionSearch" />

                <!-- Search Icon Button Inside -->
                <ImageView
                    android:id="@+id/btn_search_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/ic_search"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:tint="@color/yellow_accent"
                    android:contentDescription="Search"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp" />

            </RelativeLayout>

            <!-- Category chips removed for cleaner header -->

            <!-- SELL and BID Buttons - Sleeker Design -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="4dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sell"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/button_sell_red_shadow"
                    android:text="SELL"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="2dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_bid"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/button_bid_blue_shadow"
                    android:text="BID"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Optimized Filter Section with Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp">

                <!-- Top Controls: Compact Filter Button + View Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Compact Filter Button -->
                    <LinearLayout
                        android:id="@+id/btn_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/modern_filter_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:maxWidth="160dp"
                        android:minWidth="120dp"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_filter"
                            android:tint="#000000" />

                        <TextView
                            android:id="@+id/tv_filter_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:text="All Items"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- View Toggle -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/modern_view_toggle_background"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/btn_list_view_home"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/modern_toggle_active"
                            android:clickable="true"
                            android:contentDescription="List View"
                            android:focusable="true"
                            android:padding="7dp"
                            android:src="@drawable/ic_list_view" />

                        <ImageView
                            android:id="@+id/btn_grid_view_home"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginStart="3dp"
                            android:background="@drawable/modern_toggle_inactive"
                            android:clickable="true"
                            android:contentDescription="Grid View"
                            android:focusable="true"
                            android:padding="8dp"
                            android:src="@drawable/ic_grid_view" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider Line Below Filter Bar -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#E0E0E0" />

            </LinearLayout>

        <!-- Posts Section -->

            <!-- Bottom Navigation Bar (Floating) -->

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srl_home_refresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_secondary"
                    android:padding="12dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/ll_posts_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Posts will be added dynamically here -->
                            <!-- Empty state will be shown when no posts -->

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- Fixed Bottom Navigation Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:elevation="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/nav_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_nav_item_active_circle"
                        android:padding="4dp"
                        android:src="@drawable/ic_home"
                        android:tint="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_notifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_notifications_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_notifications"
                            android:tint="@color/text_secondary" />

                        <!-- Notification Badge -->
                        <TextView
                            android:id="@+id/badge_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/unread_dot_background"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:minWidth="16dp"
                            android:minHeight="16dp"
                            android:gravity="center"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_messages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_messages_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_messages"
                            android:tint="@color/text_secondary" />

                        <!-- Message Badge -->
                        <TextView
                            android:id="@+id/badge_messages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/unread_dot_background"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:minWidth="16dp"
                            android:minHeight="16dp"
                            android:gravity="center"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_sold_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_favorites"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ripple_nav_item"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_profile"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Drawer Navigation -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <!-- Drawer Header -->
            <include layout="@layout/drawer_header" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Drawer Menu -->
            <include layout="@layout/drawer_menu" />

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
