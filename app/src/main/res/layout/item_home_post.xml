<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_card_shadow"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/iv_post_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:background="@color/gray_100"
        android:contentDescription="Item image"
        android:layout_marginBottom="8dp" />

    <!-- Product Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_post_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_post_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±0.00"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just now"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_favorite_border"
            android:tint="@color/yellow_accent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:contentDescription="Add to favorites" />

    </LinearLayout>

    <!-- View Button -->
    <TextView
        android:id="@+id/btn_view_post"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:paddingHorizontal="16dp"
        android:gravity="center"
        android:text="View"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/view_button_yellow_ripple" />

</LinearLayout>


