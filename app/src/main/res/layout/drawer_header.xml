<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/drawer_header_background"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:elevation="2dp">

    <!-- Profile Picture - Left Side -->
    <ImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_profile"
        android:background="@drawable/circle_background_white"
        android:scaleType="centerCrop"
        android:padding="2dp"
        android:elevation="3dp" />

    <!-- User Info - Right Side -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Username -->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Verification Badge -->
        <LinearLayout
            android:id="@+id/ll_verification_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:background="@drawable/badge_verified_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <!-- Verified Badge Icon (Blue badge with white checkmark) -->
            <ImageView
                android:id="@+id/iv_verified_badge_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_verified_badge"
                android:contentDescription="Verified"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_verification_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified âœ…"
                android:textColor="#1976D2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Bidding Status Badge -->
        <LinearLayout
            android:id="@+id/ll_bidding_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:background="@drawable/badge_bidder_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tv_bidding_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved Bidder ðŸŽ¯"
                android:textColor="#388E3C"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
