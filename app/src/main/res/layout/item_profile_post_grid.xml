<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/modern_post_card_background"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="2dp">

    <!-- Post Image with Loading Effect -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv_post_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_100"
            android:contentDescription="Post image"
            android:scaleType="centerCrop" />

        <!-- Loading Shimmer Effect -->
        <LinearLayout
            android:id="@+id/ll_loading_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_200"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateTint="@color/yellow_accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Loading..."
                android:textColor="@color/text_secondary"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Favorites Counter Overlay -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:background="@drawable/favorites_counter_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_favorite_filled_red"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tv_favorites_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </FrameLayout>

    <!-- Post Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Post"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_post_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±0.00"
            android:textColor="@color/yellow_accent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <!-- Status Chip -->
        <TextView
            android:id="@+id/tv_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:text="Available"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/status_chip_available" />

        <!-- Post Date -->
        <TextView
            android:id="@+id/tv_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Posted 2 days ago"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- 3-Dot Menu -->
    <ImageView
        android:id="@+id/btn_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-4dp"
        android:contentDescription="More options"
        android:src="@drawable/ic_more_vert"
        android:tint="@color/text_secondary"
        android:background="@drawable/menu_button_background"
        android:padding="4dp" />

</LinearLayout>

