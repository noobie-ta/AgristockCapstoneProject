<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/modern_post_card_background"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="2dp">

    <!-- Post Image -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv_post_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_100"
            android:contentDescription="Post image"
            android:scaleType="centerCrop" />

        <!-- Favorites Counter Overlay -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:background="@drawable/favorites_counter_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_favorite_filled_red"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tv_favorites_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </FrameLayout>

    <!-- Post Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Post"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_post_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±0.00"
            android:textColor="@color/yellow_accent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />


        <!-- Category and Sale/Trade Type -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_category_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_sell"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="CATEGORY"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_sale_trade_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/status_chip_sale_trade"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="SALE"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_bid_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/status_chip_bid"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="BID"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_sold_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/badge_sold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="SOLD"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Status Chip -->
        <TextView
            android:id="@+id/tv_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:text="Available"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/status_chip_available" />

    </LinearLayout>

</LinearLayout>


