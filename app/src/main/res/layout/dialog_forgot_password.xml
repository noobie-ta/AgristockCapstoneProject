<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_container_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:minWidth="280dp">

        <!-- Header Section with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Icon Container -->
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/forgot_password_icon_background"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:minWidth="56dp"
                android:minHeight="56dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_key"
                    android:contentDescription="Key icon"
                    android:tint="@color/yellow_accent"
                    android:adjustViewBounds="true" />

            </LinearLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your email address and we'll send you instructions to reset your password."
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1.3"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:maxLines="3"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Email Input Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:maxLines="1" />

        <!-- Email Input with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:minHeight="52dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_email"
                android:layout_marginEnd="10dp"
                android:contentDescription="Email icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textColorHint="#999999"
                android:textColor="@color/text_primary"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:minHeight="36dp"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone" />

        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="4dp">

            <!-- Cancel Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/forgot_password_cancel_button"
                android:minHeight="48dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minWidth="0dp" />

            <!-- Send Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Send"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_yellow_background"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:elevation="2dp"
                android:minWidth="0dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>


