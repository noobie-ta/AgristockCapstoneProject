<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_background"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Posts"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp" />

    <!-- Sort By Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newest"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:checked="true"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/rb_oldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oldest"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:paddingVertical="8dp" />

    </RadioGroup>

    <!-- Status Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_all_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Items"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:checked="true"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/rb_active_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Items"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/rb_sold_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sold Items"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:paddingVertical="8dp" />

    </RadioGroup>

    <!-- Type Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/rb_all_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Posts"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:checked="true"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/rb_sell_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell Posts"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/rb_bid_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bid Posts"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:paddingVertical="8dp" />

    </RadioGroup>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="@color/yellow_accent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>


