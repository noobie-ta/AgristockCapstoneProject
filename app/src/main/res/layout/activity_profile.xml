<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondary">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:tint="@color/text_secondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/btn_edit_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit Profile"
            android:tint="@color/yellow_accent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Profile Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cover Photo Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/gray_100">

                <ImageView
                    android:id="@+id/iv_cover_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_placeholder" />

                <!-- Edit Cover Photo Button -->
                <LinearLayout
                    android:id="@+id/btn_edit_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:background="@drawable/edit_cover_button_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Edit Cover Photo"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </FrameLayout>

            <!-- Profile Picture Overlapping Cover Photo -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <!-- Profile Picture with Circular Crop -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:background="@drawable/circular_avatar_background"
                        android:padding="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Camera overlay -->
                    <ImageView
                        android:id="@+id/iv_upload"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:contentDescription="Upload"
                        android:padding="8dp"
                        android:src="@drawable/ic_camera"
                        android:background="@drawable/camera_overlay_background"
                        android:tint="@color/white" />

                </FrameLayout>

            </FrameLayout>

            <!-- Profile Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/facebook_profile_card_background"
                android:padding="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <!-- Username -->
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="John Doe"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Bio -->
                <TextView
                    android:id="@+id/tv_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Bio not set"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <!-- Location -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Location not set"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Contact -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_phone"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Contact not set"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Profile Completion Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Profile Completion"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tv_completion_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/yellow_accent"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_completion"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:progress="60"
                        android:progressTint="@color/yellow_accent" />

                </LinearLayout>

                <!-- Ratings Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- Interactive Star Rating -->
                    <LinearLayout
                        android:id="@+id/ll_star_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/star_1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star_filled"
                            android:tint="@color/yellow_accent"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star_2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star_filled"
                            android:tint="@color/yellow_accent"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star_3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star_filled"
                            android:tint="@color/yellow_accent"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star_4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star_filled"
                            android:tint="@color/yellow_accent"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/star_5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star_filled"
                            android:tint="@color/yellow_accent"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <!-- Rating text -->
                        <TextView
                            android:id="@+id/tv_rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0/5"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Total ratings -->
                    <TextView
                        android:id="@+id/tv_total_ratings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0 ratings"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Posts Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Posts"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Sort and View Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Sort Options -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_sort_newest"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:background="@drawable/sort_button_active"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:text="Newest"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/btn_sort_oldest"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sort_button_inactive"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:text="Oldest"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- View Toggle Options -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/view_toggle_background"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/btn_list_view"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/view_toggle_active"
                            android:src="@drawable/ic_list_view"
                            android:padding="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="List View" />

                        <ImageView
                            android:id="@+id/btn_grid_view"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/view_toggle_inactive"
                            android:src="@drawable/ic_grid_view"
                            android:padding="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Grid View" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Posts Container -->
            <LinearLayout
                android:id="@+id/ll_posts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>


