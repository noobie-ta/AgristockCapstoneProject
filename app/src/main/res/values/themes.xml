<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AgristockCapstoneProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/yellow_accent</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorPrimaryContainer">@color/yellow_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        <item name="colorSecondary">@color/text_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/gray_100</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOutline">@color/gray_200</item>
        <item name="colorOutlineVariant">@color/gray_300</item>
        <item name="colorError">@color/button_sell_text</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.AgristockCapstoneProject.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.AgristockCapstoneProject.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.AgristockCapstoneProject.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.AgristockCapstoneProject.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.AgristockCapstoneProject.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.AgristockCapstoneProject.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.AgristockCapstoneProject.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.AgristockCapstoneProject.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.AgristockCapstoneProject.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.AgristockCapstoneProject.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.AgristockCapstoneProject.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.AgristockCapstoneProject.LabelSmall</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.AgristockCapstoneProject.Button</item>
        
        <!-- Ripple effects -->
        <item name="android:colorControlHighlight">@color/yellow_light</item>

        <!-- Status bar: dark background with white icons -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.AgristockCapstoneProject" parent="Base.Theme.AgristockCapstoneProject" />
    
    <!-- Typography Styles -->
    <style name="TextAppearance.AgristockCapstoneProject.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.AgristockCapstoneProject.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.AgristockCapstoneProject.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>